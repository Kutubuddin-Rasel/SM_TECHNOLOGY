{
    "info": {
        "name": "SM Backend - Order Management API (Cookie Auth)",
        "description": "Complete API collection with HTTP-Only Cookie Authentication + CSRF Protection\n\nIMPORTANT: Make sure to enable cookie management in Postman settings.",
        "schema": "https://schema.getpostman.com/json/collection/v2.1.0/collection.json"
    },
    "variable": [
        {
            "key": "baseUrl",
            "value": "http://localhost:3000",
            "type": "string"
        },
        {
            "key": "csrfToken",
            "value": "",
            "type": "string"
        }
    ],
    "item": [
        {
            "name": "Authentication (No CSRF Required)",
            "item": [
                {
                    "name": "Register",
                    "request": {
                        "method": "POST",
                        "header": [
                            {
                                "key": "Content-Type",
                                "value": "application/json"
                            }
                        ],
                        "body": {
                            "mode": "raw",
                            "raw": "{\n  \"email\": \"user@example.com\",\n  \"password\": \"SecurePass123!\"\n}"
                        },
                        "url": {
                            "raw": "{{baseUrl}}/api/auth/register",
                            "host": [
                                "{{baseUrl}}"
                            ],
                            "path": [
                                "api",
                                "auth",
                                "register"
                            ]
                        },
                        "description": "Register new user. Cookie is set automatically. NO CSRF token required."
                    }
                },
                {
                    "name": "Login",
                    "request": {
                        "method": "POST",
                        "header": [
                            {
                                "key": "Content-Type",
                                "value": "application/json"
                            }
                        ],
                        "body": {
                            "mode": "raw",
                            "raw": "{\n  \"email\": \"user@example.com\",\n  \"password\": \"SecurePass123!\"\n}"
                        },
                        "url": {
                            "raw": "{{baseUrl}}/api/auth/login",
                            "host": [
                                "{{baseUrl}}"
                            ],
                            "path": [
                                "api",
                                "auth",
                                "login"
                            ]
                        },
                        "description": "Login user. Cookie is set automatically. NO CSRF token required."
                    }
                },
                {
                    "name": "Logout",
                    "request": {
                        "method": "POST",
                        "header": [],
                        "url": {
                            "raw": "{{baseUrl}}/api/auth/logout",
                            "host": [
                                "{{baseUrl}}"
                            ],
                            "path": [
                                "api",
                                "auth",
                                "logout"
                            ]
                        },
                        "description": "Logout user. Clears cookie. NO CSRF token required."
                    }
                }
            ]
        },
        {
            "name": "üîê Get CSRF Token (For Protected Routes)",
            "event": [
                {
                    "listen": "test",
                    "script": {
                        "exec": [
                            "if (pm.response.code === 200) {",
                            "    const response = pm.response.json();",
                            "    pm.collectionVariables.set('csrfToken', response.csrfToken);",
                            "    console.log('CSRF Token saved:', response.csrfToken);",
                            "}"
                        ],
                        "type": "text/javascript"
                    }
                }
            ],
            "request": {
                "method": "GET",
                "header": [],
                "url": {
                    "raw": "{{baseUrl}}/api/csrf/csrf-token",
                    "host": [
                        "{{baseUrl}}"
                    ],
                    "path": [
                        "api",
                        "csrf",
                        "csrf-token"
                    ]
                },
                "description": "Get CSRF token AFTER login. Required for orders and chatbot."
            }
        },
        {
            "name": "Orders (CSRF Required)",
            "item": [
                {
                    "name": "Create Order (Stripe)",
                    "request": {
                        "method": "POST",
                        "header": [
                            {
                                "key": "Content-Type",
                                "value": "application/json"
                            },
                            {
                                "key": "X-CSRF-Token",
                                "value": "{{csrfToken}}",
                                "description": "REQUIRED: Get CSRF token first"
                            }
                        ],
                        "body": {
                            "mode": "raw",
                            "raw": "{\n  \"items\": [\n    {\n      \"title\": \"MacBook Pro 16\\\"\",\n      \"price\": 2499.99,\n      \"quantity\": 1\n    },\n    {\n      \"title\": \"Magic Mouse\",\n      \"price\": 99.99,\n      \"quantity\": 2\n    }\n  ],\n  \"paymentMethod\": \"stripe\"\n}"
                        },
                        "url": {
                            "raw": "{{baseUrl}}/api/orders",
                            "host": [
                                "{{baseUrl}}"
                            ],
                            "path": [
                                "api",
                                "orders"
                            ]
                        },
                        "description": "Create order with Stripe. Requires CSRF token from previous request."
                    }
                },
                {
                    "name": "Create Order (PayPal)",
                    "request": {
                        "method": "POST",
                        "header": [
                            {
                                "key": "Content-Type",
                                "value": "application/json"
                            },
                            {
                                "key": "X-CSRF-Token",
                                "value": "{{csrfToken}}"
                            }
                        ],
                        "body": {
                            "mode": "raw",
                            "raw": "{\n  \"items\": [\n    {\n      \"title\": \"iPhone 15 Pro\",\n      \"price\": 999,\n      \"quantity\": 1\n    }\n  ],\n  \"paymentMethod\": \"paypal\"\n}"
                        },
                        "url": {
                            "raw": "{{baseUrl}}/api/orders",
                            "host": [
                                "{{baseUrl}}"
                            ],
                            "path": [
                                "api",
                                "orders"
                            ]
                        },
                        "description": "Create order with PayPal (mocked)"
                    }
                },
                {
                    "name": "Update Order Status (Admin)",
                    "request": {
                        "method": "PATCH",
                        "header": [
                            {
                                "key": "Content-Type",
                                "value": "application/json"
                            },
                            {
                                "key": "X-CSRF-Token",
                                "value": "{{csrfToken}}"
                            }
                        ],
                        "body": {
                            "mode": "raw",
                            "raw": "{\n  \"orderStatus\": \"shipped\"\n}"
                        },
                        "url": {
                            "raw": "{{baseUrl}}/api/orders/:orderId/status",
                            "host": [
                                "{{baseUrl}}"
                            ],
                            "path": [
                                "api",
                                "orders",
                                ":orderId",
                                "status"
                            ],
                            "variable": [
                                {
                                    "key": "orderId",
                                    "value": "ORDER_ID_HERE"
                                }
                            ]
                        },
                        "description": "Update order status (admin only). Requires CSRF token."
                    }
                }
            ]
        },
        {
            "name": "AI Chatbot (CSRF Required)",
            "item": [
                {
                    "name": "Ask Chatbot",
                    "request": {
                        "method": "POST",
                        "header": [
                            {
                                "key": "Content-Type",
                                "value": "application/json"
                            },
                            {
                                "key": "X-CSRF-Token",
                                "value": "{{csrfToken}}"
                            }
                        ],
                        "body": {
                            "mode": "raw",
                            "raw": "{\n  \"message\": \"What laptops do you recommend for developers?\"\n}"
                        },
                        "url": {
                            "raw": "{{baseUrl}}/api/chatbot",
                            "host": [
                                "{{baseUrl}}"
                            ],
                            "path": [
                                "api",
                                "chatbot"
                            ]
                        },
                        "description": "Chat with AI. Requires CSRF token."
                    }
                },
                {
                    "name": "Follow-up Question",
                    "request": {
                        "method": "POST",
                        "header": [
                            {
                                "key": "Content-Type",
                                "value": "application/json"
                            },
                            {
                                "key": "X-CSRF-Token",
                                "value": "{{csrfToken}}"
                            }
                        ],
                        "body": {
                            "mode": "raw",
                            "raw": "{\n  \"message\": \"Tell me more about the first one you mentioned\"\n}"
                        },
                        "url": {
                            "raw": "{{baseUrl}}/api/chatbot",
                            "host": [
                                "{{baseUrl}}"
                            ],
                            "path": [
                                "api",
                                "chatbot"
                            ]
                        },
                        "description": "AI remembers context"
                    }
                }
            ]
        },
        {
            "name": "Webhooks (No CSRF - External)",
            "item": [
                {
                    "name": "Stripe Webhook",
                    "request": {
                        "method": "POST",
                        "header": [
                            {
                                "key": "Content-Type",
                                "value": "application/json"
                            },
                            {
                                "key": "stripe-signature",
                                "value": "SIGNATURE_FROM_STRIPE_CLI"
                            }
                        ],
                        "body": {
                            "mode": "raw",
                            "raw": "{\n  \"type\": \"payment_intent.succeeded\",\n  \"data\": {\n    \"object\": {\n      \"id\": \"pi_xxx\",\n      \"metadata\": {\n        \"orderId\": \"ORDER_ID\"\n      }\n    }\n  }\n}"
                        },
                        "url": {
                            "raw": "{{baseUrl}}/payments/stripe/webhook",
                            "host": [
                                "{{baseUrl}}"
                            ],
                            "path": [
                                "payments",
                                "stripe",
                                "webhook"
                            ]
                        },
                        "description": "Test with: stripe trigger payment_intent.succeeded"
                    }
                },
                {
                    "name": "PayPal Webhook",
                    "request": {
                        "method": "POST",
                        "header": [
                            {
                                "key": "Content-Type",
                                "value": "application/json"
                            }
                        ],
                        "body": {
                            "mode": "raw",
                            "raw": "{\n  \"event_type\": \"PAYMENT.CAPTURE.COMPLETED\",\n  \"resource\": {\n    \"custom_id\": \"ORDER_ID\"\n  }\n}"
                        },
                        "url": {
                            "raw": "{{baseUrl}}/payments/paypal/webhook",
                            "host": [
                                "{{baseUrl}}"
                            ],
                            "path": [
                                "payments",
                                "paypal",
                                "webhook"
                            ]
                        },
                        "description": "PayPal webhook (mocked)"
                    }
                }
            ]
        }
    ]
}